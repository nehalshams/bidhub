// tsconfig.json
{
  "compilerOptions": {
    "target": "ES6",                          // Specifies the target ECMAScript version
    "module": "CommonJS",                     // Specifies the module code generation
    "outDir": "./dist",                       // Output directory for the compiled JavaScript files
    "rootDir": "./src",                       // Root directory of the source TypeScript files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true                      // Skip type checking of all declaration files (*.d.ts)
  },
  "include": ["src/**/*.ts"],                 // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"]         // Exclude node_modules and dist directories
}
